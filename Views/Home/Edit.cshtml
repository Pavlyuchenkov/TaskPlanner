@model TaskPlanner.Models.Task

@{ 
    ViewBag.Title = "Редактирование задачи";
}
    <form asp-action="edit" asp-controller="home" asp-route-id="@Model.TaskId">
        <div class="form-group">
            <label asp-for="TaskName" class="control-label">Название задачи: </label>
            <input type="text" asp-for="TaskName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="TaskDescrip" class="control-label">Возраст</label>
            <input type="text" asp-for="TaskDescrip" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
    </form>