@model TaskPlanner.Models.Task
@{
    ViewBag.Title = "Удаление задачи";
}

<div>
    <dl class="dl-horizontal">
        <dt>Название задачи</dt>
        <dd>
            @Html.DisplayFor(model => model.TaskName)
        </dd>

        <dt>Описание задачи</dt>
        <dd>
            @Html.DisplayFor(model => model.TaskDescrip)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>